{# contact.twig #}
{% extends 'baselayout.html.twig' %}
{% block content %}
    <div class='container'>
        <div class='contact col-xs-10 col-xs-offset-1'>
    <h1 class="pizzahead text-center">Contact</h1>
    <img class='img-responsive col-xs-12' src='images/googlemap.png'>
    </div>
        {%if succes %}
            <div class="col-sm-4 col-sm-offset-4 loginform">
            Bedankt voor uw boodschap<br>
            Klik <a href="index.php?page=home">hier</a> om verder te gaan naar de homepagina.
            </div>
            {% else %}
        <section id="contactform" class="col-xs-8 col-xs-offset-2">
            <form class="pizzaform" role="contactform" action="sendmail.php" method="post">
                <div class="form-group">
                    <label class="control-label" for="naam"></label>
                    <input type="text" class="form-control" id="naam" name="naam" placeholder="Jan Janssens" 
                           {% if login %}value="{{login.klant.naam}}"{% endif %}>
                </div>
                <div class="form-group">
                    <label class="control-label" for="mail"></label>
                        <input type="e-mail" class="form-control" name="mail" id="mail" placeholder="Jan.Janssens@mail.be"
                               {% if login %} value="{{login.klant.mail}}"{% endif %}>
                </div>
                <div class="form-group">
                    <label class="control-label" for="boodschap"></label>
                    <textarea rows="10" cols="100" class="form-control" name="boodschap" id="boodschap" placeholder="Uw boodschap"></textarea>
                </div>
                {% if success == "contact" %}
                    <span class="label label-success">Bedankt voor uw feedback</span>
                    {% endif %}
                {%if error == "contact" %}
                <span class="label label-danger">Er ging iets mis, controleer of u alle velden wel correct hebt ingevuld</span>
                {% endif %}
                <input type="hidden" name="page" id="page" value="contact">
                <input type="submit" class="btn pizza-btn" value="Verzenden">
            </form>
        </section>
                {% endif %}
        
    </div>
{% endblock %}
