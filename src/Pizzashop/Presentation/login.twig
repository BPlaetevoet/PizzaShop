{# login.twig #}
{% extends 'BaseLayout.template.twig' %}
{% block content %}
    <div class="container">
    <div class="col-sm-4 col-sm-offset-4 loginform">
        {% if login %}
            Bedankt om in te loggen {{ login.voornaam }} {{login.naam }}<br>
            Klik <a href="index.php?page=settings">hier</a> om uw gegevens te raadplegen of te wijzigen.
        {% else %}
            {% if loginerror %}
                {{ loginerror }}
            {% endif %}
    {% include 'loginform.html.twig' %}
    {% endif %}
    </div>
    </div>
{% endblock %}
